<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Reviews - BookConnect</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="reviews-header">
      <h2>Book Reviews</h2>
      <% if (currentUser) { %>
        <a href="/reviews/add" class="btn btn-primary">Add New Review</a>
      <% } %>
    </div>
    
    <% if (reviews && reviews.length) { %>
      <div class="reviews-list">
        <% reviews.forEach(function(review) { %>
          <div class="review-card">
            <div class="review-header">
              <h3><%= review.book_title %></h3>
              <div class="rating">
                <% for (let i = 1; i <= 5; i++) { %>
                  <span class="star <%= i <= review.rating ? 'filled' : '' %>">â˜…</span>
                <% } %>
              </div>
            </div>
            <div class="review-meta">
              <span class="author">by <%= review.book_authors || 'Unknown Author' %></span>
              <span class="reviewer">Reviewed by <%= review.username %></span>
              <span class="date"><%= new Date(review.created_at).toLocaleDateString() %></span>
            </div>
            <div class="review-content">
              <p><%= review.content %></p>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="no-reviews">
        <p>No reviews yet. Be the first to share your thoughts!</p>
        <% if (currentUser) { %>
          <a href="/reviews/add" class="btn btn-primary">Add First Review</a>
        <% } else { %>
          <a href="/login" class="btn btn-primary">Login to Add Review</a>
        <% } %>
      </div>
    <% } %>
  </main>
  <%- include('partials/footer') %>
</body>
</html>